doctype html

html(lang="en")
	head
		//- Basic Page Needs
		- var adName = locals.bannerName;
		title #{adName}
		meta(name="ad.size" content="width="+locals.bannerWidth+", height="+locals.bannerHeight)
		meta(charset="utf-8")
		meta(name="format-detection" content="telephone=no")
		meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")

		//- Mobile Specific Metas
		//- ==================================================
		meta(name="viewport" content="width=device-width, initial-scale=1")

		//- CSS
		//-
		
		link(rel='stylesheet' href='css/style.css')
		//- JS
		- var tags = locals.url_links;

		script(type="text/javascript")
			each item in tags
				| var #{item.name} = "#{item.url}";

	body#body
		a(href="javascript:window.open(window.clickTag);")
			.container(style="display: none;")


		script(src='https://cdnjs.cloudflare.com/ajax/libs/gsap/3.0.4/gsap.min.js')
		//script(src='js/DrawSVGPlugin.min.js' type='text/javascript')
		script(src='https://s0.2mdn.net/ads/studio/Enabler.js')
		script(src='js/main.js' type='text/javascript')
